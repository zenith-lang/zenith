#!/usr/bin/env zenith

msg_0 "Hello!  What is your name?
> "
len_0 #msg_0;
msg_1 "
Nice to meet you, "
len_1 #msg_1;
msg_2 "!  My name is Zenith.
"
len_2 #msg_2;
# Maximum length of a name is 100 characters
name "                                                                                                    "
name_max #name;

$ main {
        # Write prompt
    push len_0;
    push msg_0;
    push 1;
    push 4;
    syscall;
    ignore;
        # Read name
    push name_max;
    push name;
    push 0;
    push 3;
    syscall;
        # Print greeting
    push len_1;
    push msg_1;
    push 1;
    push 4;
    syscall;
    ignore;
        #
    push name;
    push 1;
    push 4;
    syscall;
    ignore;
        #
    push len_2;
    push msg_2;
    push 1;
    push 4;
    syscall;
    ignore;
        # Exit program
    push 1;
    syscall;
}
